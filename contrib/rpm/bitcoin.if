##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`perfectcoin_search_lib',`
	gen_require(`
		type perfectcoin_var_lib_t;
	')

	allow $1 perfectcoin_var_lib_t:dir search_dir_perms;
	files_search_var_lib($1)
')

